<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="vm"
            type="com.mrapple100.pollsvk3.VKViewModel" />
    </data>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center">
    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="id_VK_автора (mrapple100)"
        android:gravity="center"
        >
    </TextView>
    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@={vm.textScreenName}">
    </EditText>
    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="id_Poll"
        android:gravity="center"
        >
    </TextView>
    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@={vm.textIdPoll}">
    </EditText>
    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Список нужных людей"
        android:gravity="center"
        >
    </TextView>
    <EditText
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="@={vm.textListUsers}">
    </EditText>
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Выполнить"
        android:onClick="@{()->vm.VKClick()}"
        ></Button>
    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@{vm.textResult}"
        ></TextView>


</LinearLayout>
</layout>
